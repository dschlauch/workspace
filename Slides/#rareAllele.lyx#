\end_layout

\begin_layout Standard
\begin_inset ERT
status open

\begin_layout Plain Layout


\backslash
begin{block}{A simple proposed approach}
\end_layout

\begin_layout Plain Layout


\backslash
begin{itemize}
\end_layout

\begin_layout Plain Layout


\backslash
item Utilize the intuition that rare variants are more informative than
 common variants.
\end_layout

\begin_layout Plain Layout


\backslash
item Build a genetic similarity matrix based on a weighted variation of
 the Jaccard Index and perform eigendecomposition.
\end_layout

\begin_layout Plain Layout


\backslash
item Apply correction using the top PCs.
\end_layout

\begin_layout Plain Layout


\backslash
end{itemize}
\end_layout

\begin_layout Plain Layout


\backslash
end{block}
\end_layout

\end_inset

Jaccard Index:
\end_layout

\begin_layout Standard
\begin_inset Formula 
\[
J=\frac{\left|A\cap B\right|}{\left|A\cup B\right|}
\]

\end_inset


\end_layout

\begin_layout EndFrame

\end_layout

\begin_layout BeginFrame
Genetic Similarity Measure
\end_layout

\begin_layout Standard
For a matrix of 
\begin_inset Formula $n$
\end_inset

 individuals (
\begin_inset Formula $2n$
\end_inset

 haploid genomes), with 
\begin_inset Formula $N$
\end_inset

 variants described by the genotype matrix 
\begin_inset Formula $\mathbf{G}_{2n\times N}$
\end_inset

, we define the weighted Jaccard similarity between two haploid genomes,
 
\begin_inset Formula $d_{i,j}$
\end_inset


\end_layout

\begin_layout Standard
\begin_inset Formula 
\[
d_{i,j}=\frac{\sum_{k=1}^{N}w_{k}\mathbf{G}_{i,k}\mathbf{G}_{j,k}}{\sum_{k=1}^{N}\mathbf{G}_{i,k}+\sum_{k=1}^{N}\mathbf{G}_{j,k}-\sum_{k=1}^{N}\mathbf{G}_{i,k}\mathbf{G}_{j,k}}
\]

\end_inset


\end_layout

\begin_layout Standard
where 
\family roman
\series medium
\shape up
\size normal
\emph off
\bar no
\strikeout off
\uuline off
\uwave off
\noun off
\color none

\begin_inset Formula 
\[
w_{k,i,j}=\begin{cases}
\frac{2\left(N-1\right)}{\sum_{l=1}^{2n}\mathbf{G}_{l,k}-1}-1 & \sum_{l=1}^{2n}\mathbf{G}_{l,k}>1\\
0 & \sum_{l=1}^{2n}\mathbf{G}_{l,k}\le1
\end{cases}
\]

\end_inset


\family default
\series default
\shape default
\size default
\emph default
\bar default
\strikeout default
\uuline default
\uwave default
\noun default
\color inherit

\begin_inset Formula 
\begin{align*}
E\left(d_{i,j}|\mbox{No structure}\right) & =1\\
\hat{Var}\left(d_{i,j}|\mbox{No structure}\right) & \approx\frac{\sum_{k=1}^{N}\hat{p}_{k}\left(1-\hat{p}_{k}\right)\left(w_{k,i,j}\right)^{2}}{\left(\sum_{k=1}^{N}\mathbf{G}_{i,k}+\sum_{k=1}^{N}\mathbf{G}_{j,k}-\sum_{k=1}^{N}\mathbf{G}_{i,k}\mathbf{G}_{j,k}\right)^{2}}
\end{align*}

\end_inset


\end_layout

\begin_layout EndFrame

\end_layout

\begin_layout BeginFrame
Genetic Similarity Measure
\end_layout

\begin_layout Standard
This measure is particularly sensitive for measuring kinship.
 
\end_layout

